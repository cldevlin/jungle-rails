<h1>Signup!</h1>



<%= form_for :user, url: '/users', :html => {:class => "form-horizontal center"} do |f| %>


  <div class="form-group">
  <%= f.label :first_name, "First name:", class: "col-sm-2 col-form-label" %>
  <%= f.text_field :first_name %>
    </div>
  <div class="form-group">
  <%= f.label :last_name, "Last name:", class: "col-md-2 col-form-label" %>
  <%= f.text_field :last_name %>
    </div>
  <div class="form-group">
  <%= f.label :email, "Email:", class: "col-md-2 col-form-label" %>
  <%= f.text_field :email %>
    </div>
  <div class="form-group">
  <%= f.label :password, "Password:", class: "col-md-2 col-form-label" %>
  <%= f.password_field :password %>
    </div>
  <div class="form-group">
  <%= f.label :password_confirmation, "Password Confirmation:", class: "col-md-2 col-form-label" %>
  <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit "Submit", class: "btn btn-default" %>

<% end %>